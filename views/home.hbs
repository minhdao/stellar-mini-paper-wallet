
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <script type="text/javascript" src="qrcode/build/qrcode.min.js"></script>
    <script src="bootstrap/dist/js/bootstrap.js"></script>
    <link href="bootstrap/dist/css/bootstrap.css" type="text/css" rel="stylesheet" />
    <link href="css/style.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div class="line"></div>
    <div id="header">

        <h1 id="header-title">Origami Stellar Wallet </h1>
    </div>
    <div id="container" class="row col-lg-12">

        <div class="row col-lg-12" style="text-align:center">
            <div class=" lineFolding testPublic">
                <h3>Public Key</h3>
                <canvas id="publicCanvas"></canvas>
            </div>
            <div class=" lineFolding testInfo">
                <h3>Information</h3>
                <canvas id="publicCanvas"></canvas>
            </div>
            <div class=" lineFolding testPrivate">
                <h3>Private Key</h3>
                <canvas id="privateCanvas"></canvas>
            </div>
        </div>
    </div>
    <div id="footer"></div>
    <canvas id="canvas" width="200" height="100"></canvas>
</body>
</html>
<script>
    QRCode.toCanvas(document.getElementById('publicCanvas'), '{{publicKey}}', function (error) {
        if (error) console.error(error)
        console.log('success!');
    })
    QRCode.toCanvas(document.getElementById('privateCanvas'), '{{privateKey}}', function (error) {
        if (error) console.error(error)
        console.log('success!');
    })
</script>
